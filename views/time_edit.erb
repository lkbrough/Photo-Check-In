<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First</th>
      <th scope="col">Last</th>
      <% for k in 1..@maxk do %>
        <th scope="col">Time In</th>
        <th scope="col">Time Out</th>
      <% end %>
      <th scope="col">Total Time</th>
      <th scope="col">Complete</th>
    </tr>
  </thead>
  <tbody>
    <tr>
        <th scope="row">1</th>
        <td><%= User.get(@user_id).first_name %></td>
        <td><%= User.get(@user_id).last_name %></td>
        <% h = 0
        TimeCard.all(user_id: @user_id, date: @date).each do |x| %>
        <td><%= x.sign_in.strftime("%l:%M%p") if x.sign_in %></td>
        <td><%= x.sign_out.strftime("%l:%M%p") if x.sign_out %></td>
        <% h += x.sign_out.to_time.to_f - x.sign_in.to_time.to_f if x.complete
        end
        h += Time.now.to_f - TimeCard.last(user_id: @user_id, date: @date).sign_in.to_time.to_f if !TimeCard.last(user_id: @user_id, date: @date).complete %>
        <td><%= "#{(h / 3600).floor} hours, #{(h / 60 % 60).floor} min." if h >= 0 && h / 3600 <= 24 %></td>
        <td><%= TimeCard.last(user_id: @user_id, date: @date).complete %></td>
    </tr>
    <tr>
        <th scope="row">2</th>
        <td></td>
        <td></td>
        <% TimeCard.all(user_id: @user_id, date: @date).each do |x| %>
        <td><form action="/edit" method="post">
            <input type="submit" value="change to"/>
            <input type="time" name="time_in"/>
            <input type="hidden" value=<%= @date %> name="date"/>
            <input type="hidden" value=<%= @user_id %> name="user_id"/>
        </form></td>
        <td><form action="/edit" method="post">
            <input type="submit" value="change to"/>
            <input type="time" name="time_out"/>
            <input type="hidden" value=<%= @date %> name="date"/>
            <input type="hidden" value=<%= @user_id %> name="user_id"/>
        </form></td>
        <% end %>
        <td></td>
        <td></td>
    </tr>
    <tr>
        <th scope="row">3</th>
        <td></td>
        <td></td>
        <% TimeCard.all(user_id: @user_id, date: @date).each do |x| %>
        <td><% if x.sign_in %><form action="/edit" method="post">
            <input type="submit" value="delete"/>
            <input type="hidden" value="time_in" name="type"/>
            <input type="hidden" value=<%= @date %> name="date"/>
            <input type="hidden" value=<%= @user_id %> name="user_id"/>
        </form><% end %></td>
        <td><% if x.sign_out %><form action="/edit" method="post">
            <input type="submit" value="delete"/>
            <input type="hidden" value="time_out" name="type"/>
            <input type="hidden" value=<%= @date %> name="date"/>
            <input type="hidden" value=<%= @user_id %> name="user_id"/>
        </form><% end %></td>
        <% end %>
        <td></td>
        <td></td>
    </tr>
  </tbody>
</table>