<h1>Time Cards for <%= current_user.company_name %></h1>
<h5>Limit by Date:</h5>
<form action="/timesheets" method="GET">
	Date: <input type="date" name="date"><br/>
	<input type="submit" value="Submit" type="button" class="btn btn-primary">
</form>
</br>

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Edit</th>
      <th scope="col">First</th>
      <th scope="col">Last</th>
      <% for k in 1..@maxk do %>
        <th scope="col">Time In</th>
        <th scope="col">Time Out</th>
      <% end %>
      <th scope="col">Total Time</th>
      <th scope="col">Complete</th>
    </tr>
  </thead>
  <tbody>
    <%  i = 1
        for j in 1..@max do
          if TimeCard.first(user_id: j, date: @temp)
            k = 0
            h = 0 %>
            <tr>
              <th scope="row"><%= i %></th>
              <td><form action="/edit" method="get">
                <input type="submit" value="Edit" type="button" class="btn btn-outline-primary"/>
                <input type="hidden" value=<%= @temp %> name="date"/>
                <input type="hidden" value=<%= j %> name="user_id"/>
              </form></td>
              <td><%= User.get(j).first_name %></td>
              <td><%= User.get(j).last_name %></td>
              <% TimeCard.all(user_id: j, date: @temp).each do |x| %>
                <td><%= x.sign_in.strftime("%l:%M%p") if x.sign_in %></td>
                <td><%= x.sign_out.strftime("%l:%M%p") if x.sign_out %></td>
              <% h += x.sign_out.to_time.to_f - x.sign_in.to_time.to_f if x.complete
              k += 1
              end
              h += Time.now.to_f - TimeCard.last(user_id: j, date: @temp).sign_in.to_time.to_f if !TimeCard.last(user_id: j, date: @temp).complete
              while k < @maxk do %>
                <td></td>
                <td></td>
              <% k += 1
              end %>
              <td><%= "#{(h / 3600).floor} hours, #{(h / 60 % 60).floor} min." if h >= 0 && h / 3600 <= 24 %></td>
              <td><%= TimeCard.last(user_id: j, date: @temp).complete %></td>
            </tr>
          <% i += 1
          end
        end %>
  </tbody>
</table>